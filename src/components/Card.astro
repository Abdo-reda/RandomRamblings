---
interface Props {
    url: string;
    image: string;
    title: string;
    body: string;
}

const { url, image, title, body } = Astro.props;

// TODO: IMPROVE IMAGE LOADING HERE
// - https://docs.astro.build/en/recipes/dynamically-importing-images/
// - https://docs.astro.build/en/guides/images/#images-in-content-collections
---

<li class="card">
    <a class="card__link" href={url}>
        <div class="center">
            <img
                class="card__img"
                width="226"
                height="127"
                src={image}
                alt="ProjectImage"
            />
        </div>
        <h3 class="card__title">
            {title}
        </h3>
        <p class="card__txt">
            {body}
        </p>
    </a>
</li>
